<Window x:Class="Theme12_OrganizationUI.View.EmployeePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme12_OrganizationUI.View"
        mc:Ignorable="d"
        Title="EmployeePage" Height="300" Width="300"
        Background="Coral">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Имя"/>
            <TextBox Text="" Width="157"/>
            <TextBlock Text="Фамилия"/>
            <TextBox Text=""/>
            <TextBlock Text="Возраст"/>
            <TextBox Text=""/>
            <TextBlock Text="Зарплата"/>
            <TextBox Text=""/>
            <TextBlock Text="Позиция"/>
            <TextBox Text=""/>
            <TextBlock Text="Департамент"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1" Content="Add Employee"/>
    </Grid>
</Window>
