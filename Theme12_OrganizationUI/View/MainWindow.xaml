<Window x:Class="Theme12_OrganizationUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Theme12_OrganizationUI.View"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <!-- Вкладки -->
    <TabControl>
        <!-- Вкладка "Департаменты" -->
        <TabItem Header="Департаменты">
            <!-- Фрейм -->
            <Frame Content="{Binding DepartmentsPage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
        <!-- Вкладка "Сотрудники" -->
        <TabItem Header="Сотрудники">
            <!-- Фрейм -->
            <Frame Content="{Binding EmployeesPage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
    </TabControl>
</Window>