<Window x:Class="TheBank.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBank.View"
        mc:Ignorable="d"
        Title="The Bank" WindowState="Maximized">
    <!-- Вкладки -->
    <TabControl>
        <!-- Вкладка "Вклады" -->
        <TabItem Header="Вклады">
            <!-- Фрейм -->
            <Frame Content="{Binding DepositsPage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
        <!-- Вкладка "Клиенты" -->
        <TabItem Header="Клиенты">
            <!-- Фрейм -->
            <Frame Content="{Binding ClientTablePage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
        <!-- Вкладка "Департаменты" -->
        <TabItem Header="Департаменты">
            <!-- Фрейм -->
            <Frame Content="{Binding DepartmentsPage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
        <!-- Вкладка "Сотрудники" -->
        <TabItem Header="Сотрудники">
            <!-- Фрейм -->
            <Frame Content="{Binding EmployeesPage}" NavigationUIVisibility="Hidden"/>
        </TabItem>
    </TabControl>
</Window>